
@*@model QTC.Dashboard.WebApp.Views.ErrorTable.IndexModel
*@

@model Dashboard.Common.DataModels.ControllerModel.ErrorTableModel
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "XX-Application X";
}

<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Table Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            @* Print all the headers on the error page*@
                            @foreach(var item in Model.headers){
                                <td>@item</td>
                            }
                        </tr>
                    </thead>
                    <tbody>

                        @{
                            foreach(var error in Model.errors)
                            {
                                <tr>
                                    <td>@error.ApplicationName</td>
                                    <td>@error.Layer</td>
                                    <td>@error.Module</td>
                                    <td>@error.Alert</td>
                                    <td>@error.AlertTeam</td>
                                    <td>@error.Severity</td>
                                    <td>@error.ServerName</td>
                                    <td>@error.ErrorCode</td>
                                    <td>@error.ErrorMessage</td>
                                    <td>@error.ErrorDate</td>
                                    <td>@error.User</td>
                                    <td><a href="*">Show Button</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->