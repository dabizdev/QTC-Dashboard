
<style>
    /***********************Spinning wheel modal********************************/
    #spinner-wheel {
        position: fixed;
        display: none;
        z-index: 1051;
        overflow: auto;
        margin: auto;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        border: 9px solid #ffffff;
        border-top: 9px solid purple;
        border-radius: 50%;
        width: 100px;
        height: 100px;
        animation: spin 2s linear infinite;
    }

    @@-webkit-keyframes spin {
        0% {
            -webkit-transform: rotate(0deg);
        }

        100% {
            -webkit-transform: rotate(360deg);
        }
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    /*******************************Static Loader*************************************/
    #static-loader {
        border: 16px solid #f3f3f3;
        border-radius: 50%;
        border-top: 16px solid purple;
        width: 120px;
        height: 120px;
        -webkit-animation: spin 2s linear infinite;
        animation: spin 2s linear infinite;
    }

    /*This is to block the page on any of the event*/
    #page-blocker {
        position: fixed;
        z-index: 1050;
        background: #d0d0d0;
        display: none;
        opacity: .75;
        filter: alpha(opacity=75);
        top: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        margin: 0 !important;
        padding: 0 !important;
        left: 0;
    }
    /****************************end of spinner***************************************/

</style>


<!--***************** Begin blocking the page and show the spinning wheel *****************-->
<div id="page-blocker"></div>
<div id="spinner-wheel"></div>
<!--***************** End blocking the page and showing the spinning wheel *****************-->

<script type="text/javascript">
    var PageSpinner = (function () {

        var wheel = document.getElementById("spinner-wheel");
        var blocker = document.getElementById("page-blocker");

        var startSpinner = function () {
            wheel.style.display = "block";
            blocker.style.display = "block";
        }

        var stopSpinner = function () {
            wheel.style.display = "none";
            blocker.style.display = "none";
        }

        return {
            startSpinner: startSpinner,
            stopSpinner: stopSpinner,
        };
    })();
</script>